<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sysdll.movies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.sysdll.movies.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/photo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
<!--          -->
        <activity
            android:name="org.sysdll.movies.main.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
             android:noHistory="true"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
            android:name="org.sysdll.movies.main.MainActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="org.sysdll.movies.main.Detail"
            android:label="@string/title_activity_detail"
             android:screenOrientation="portrait"
             >
            
        </activity>
        <activity
            android:name="org.sysdll.movies.main.About"
            android:label="@string/title_activity_about" >
        </activity>
        
    </application>

</manifest>